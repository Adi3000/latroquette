	<properties>
    	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    	<org.springframework.version>3.2.4.RELEASE</org.springframework.version>
	</properties>
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.latroquette</groupId>
	<artifactId>latroquette</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>La Troquette</name>
	<description>Site d'Ã©change en ligne</description>
	<scm>
		<url>https://github.com/Adi3000/latroquette.git</url>
		<connection>scm:git:https://github.com/Adi3000/latroquette</connection>
		<developerConnection>scm:git:git@github.com:Adi3000/latroquette.git</developerConnection>
	</scm>
	<ciManagement>
		<url>code.adi3000.com/nexus</url>
		<system>Nexus</system>
	</ciManagement>
	<build>
		<filters>
			<filter>src/main/filters/environment/${filter.environment}/filters.properties</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
				<targetPath>${project.build.directory}/test-classes</targetPath>
			</resource>
		</resources>
    </build>
	<dependencies>
