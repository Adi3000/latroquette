	<profiles>
		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<filter.environment>development</filter.environment>
			</properties>
		</profile>
		<profile>
			<id>production</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<filter.environment>production</filter.environment>
			</properties>
		</profile>
		<profile>
			<id>test</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<filter.environment>test</filter.environment>
				<liquibase.update.skip>true</liquibase.update.skip>
				<liquibase.update.skip.test>false</liquibase.update.skip.test>
				<liquibase.ant.update.skip>true</liquibase.ant.update.skip>
			</properties>
		</profile>
		<profile>
			<id>updateDb</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<liquibase.update.skip>false</liquibase.update.skip>
				<liquibase.ant.update.skip>true</liquibase.ant.update.skip>
			</properties>
		</profile>
		<profile>
			<id>updateDbAnt</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<liquibase.update.skip>true</liquibase.update.skip>
				<liquibase.ant.update.skip>false</liquibase.ant.update.skip>
			</properties>
		</profile>
		<profile>
			<id>skipUpdateDb</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<liquibase.update.skip>true</liquibase.update.skip>
				<liquibase.update.skip.test>true</liquibase.update.skip.test>
				<liquibase.ant.update.skip>true</liquibase.ant.update.skip>
			</properties>
		</profile>
	</profiles>
	<packaging>war</packaging>
</project>
