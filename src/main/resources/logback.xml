  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <Target>${logger.output}</Target>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger[%L] - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="org.dbunit.operation" level="DEBUG"/>
  <logger name="net.sf.ehcache" level="TRACE"/>
  <logger name="org.hibernate" level="INFO"/>
  <logger name="org.hibernate.type" level="INFO"/>
  <logger name="org.hibernate.loader.Loader" level="INFO"/>
  <logger name="org.hibernate.cache" level="TRACE"/>
  <root level="INFO">
<!--     <appender-ref ref="file"/> -->
    <appender-ref ref="stdout"/>
  </root>
</configuration>