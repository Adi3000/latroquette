<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
   <persistence-unit name="latroquette" transaction-type="JTA">
      <jta-data-source>${database.datasource}</jta-data-source>
      <properties>
         <property name="hibernate.dialect" value="com.adi3000.common.database.hibernate.postgres.PostgresEnhancedSQLDialect"/>
      </properties>
   </persistence-unit>
</persistence>