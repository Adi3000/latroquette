<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">com.adi3000.common.database.hibernate.postgres.PostgresEnhancedSQLDialect</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<property name="hibernate.use_outer_join">true</property>
		<property name="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
		<property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
		<property name="hibernate.cache.use_query_cache">true</property>
		<property name="hibernate.cache.use_second_level_cache">true</property>
		<property name="hibernate.cache.provider_class">net.sf.ehcache.hibernate.EhCacheProvider</property>
		<property name="hibernate.cache.provider_configuration_file_resource_path">ehcache.xml</property>
		<property name="hibernate.dialect">com.adi3000.common.database.hibernate.postgres.PostgresEnhancedSQLDialect</property>
		<mapping class="net.latroquette.common.database.data.profile.User" />
		<mapping class="net.latroquette.common.database.data.location.Location" />
		<mapping class="net.latroquette.common.database.data.item.Item" />
		<mapping class="net.latroquette.common.database.data.file.File" />
		<mapping class="net.latroquette.common.util.parameters.Parameter" />
		<mapping class="net.latroquette.common.database.data.keyword.ExternalKeyword" />
		<mapping class="net.latroquette.common.database.data.keyword.MainKeyword" />
	</session-factory>
</hibernate-configuration>
